<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="4"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:weightSum="5"
        android:layout_height="0dp">
        <TextView

            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Name">
        </TextView>
        <TextView
            android:id="@+id/tvName"
            android:layout_weight="3"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent">
        </TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:weightSum="5"
        android:layout_height="0dp"
        android:orientation="horizontal">
        <TextView

            android:layout_weight="1"
            android:gravity="center"
            android:text="Lá»›p"
            android:layout_width="0dp"
            android:layout_height="match_parent">

        </TextView>
        <TextView
            android:id="@+id/tvAgeDetail"
            android:layout_weight="3"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent">
        </TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="5"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView

            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Giao Vien "
            android:gravity="center"
            android:layout_height="match_parent">

        </TextView>
        <TextView
            android:id="@+id/tvTeacher"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_weight="3"
            android:layout_height="match_parent">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="5"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Ngay Them "
            android:gravity="center"
            android:layout_height="match_parent">

        </TextView>
        <TextView
            android:id="@+id/tvDate"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_weight="3"
            android:layout_height="match_parent">
        </TextView>
    </LinearLayout>
</LinearLayout>